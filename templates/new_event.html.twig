{% extends 'base.html.twig' %}

{% block body %}
<h1>新建事件</h1>
<form method="POST">
  {% for error in errors %}
    <div class="alert alert-danger">{{ error.getPropertyPath }}：{{ error.getMessage }}</div>
  {% endfor %}
  <div class="form-group">
    <label>标题</label>
    <input type="text" class="form-control" name="eventSubject" />
  </div>
  <div class="form-group">
    <label>与会者</label>
    <input type="text" class="form-control" name="eventAttendees" />
  </div>
  <div class="form-row">
    <div class="col">
      <div class="form-group">
        <label>开始</label>
        <input type="datetime-local" class="form-control" name="eventStart" id="eventStart" />
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label>结束</label>
        <input type="datetime-local" class="form-control" name="eventEnd" />
      </div>
    </div>
  </div>
  <div class="form-group">
    <label>描述</label>
    <textarea type="text" class="form-control" name="eventBody" rows="3"></textarea>
  </div>
  <input type="submit" class="btn btn-primary mr-2" name="submit" value="创建" />
  <a class="btn btn-secondary" href={{ path('calendar') }}>取消</a>
</form>
{% endblock %}
